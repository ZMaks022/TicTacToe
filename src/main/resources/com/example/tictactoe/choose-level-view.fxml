<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tictactoe.controllers.ChooseLevelController">
    <Label layoutX="91.0" layoutY="44.0" text="Choose difficulty level">
        <font>
            <Font size="24.0" />
        </font>
        <styleClass>
            <String fx:value="menu-title" />
            <String fx:value="menu-question" />
        </styleClass>
    </Label>

    <Button layoutX="180.0" layoutY="159.0" mnemonicParsing="false" onAction="#startEasyGame" prefWidth="110.0" styleClass="btn-menu-style" text="easy">
        <font>
            <Font size="20.0" />
        </font></Button>
    <Button layoutX="180.0" layoutY="251.0" mnemonicParsing="false" onAction="#startMiddleGame" prefWidth="110.0" styleClass="btn-menu-style" text="middle">
        <font>
            <Font size="20.0" />
        </font></Button>
    <Button layoutX="180.0" layoutY="337.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="110.0" styleClass="btn-menu-style" text="hard">
        <font>
            <Font size="20.0" />
        </font>
    </Button>


</AnchorPane>
